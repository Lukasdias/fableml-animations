<fable>
  <config font-family="Poppins" />

  <property name="pagina_atual" default="'entrada'" />
  <property name="animacao_testada" default="''" />
  <property name="contador_cliques" default="0" />

  <!-- PÁGINA 1: ANIMAÇÕES DE ENTRADA -->
  <page id="entrada" color="#e0f2fe" bg_music="osts-stage.mp3">
    <agent
      id="titulo"
      x="400"
      y="80"
      text="🎭 Teatro das Animações Mágicas"
      font-size="32"
      color="#0369a1"
      animation="fade-in"
    />

    <agent
      id="subtitulo"
      x="400"
      y="140"
      text="Bem-vindos ao espetáculo das animações!"
      font-size="18"
      color="#0284c7"
      animation="slide-down"
    />

    <!-- Demonstração das animações de entrada -->
    <agent
      id="personagem1"
      x="150"
      y="250"
      image="forest-hero-idle.png"
      width="80"
      height="80"
      animation="slide-up"
    />

    <agent
      id="personagem2"
      x="350"
      y="250"
      image="desert-jones.png"
      width="80"
      height="80"
      animation="slide-left"
    />

    <agent
      id="personagem3"
      x="550"
      y="250"
      image="snow-snowman.png"
      width="80"
      height="80"
      animation="slide-right"
    />

    <agent
      id="personagem4"
      x="750"
      y="250"
      image="tech-acid-1.png"
      width="80"
      height="80"
      animation="zoom-in"
    />

    <agent
      id="mago"
      x="400"
      y="350"
      image="forest-mushroom.png"
      width="100"
      height="100"
      animation="bounce-in"
    />

    <agent
      id="cristal"
      x="400"
      y="480"
      image="tech-saw.png"
      width="60"
      height="60"
      animation="flip-in"
    />

    <agent
      id="instrucao1"
      x="400"
      y="580"
      text="👆 Observe como cada personagem aparece com animação diferente!"
      font-size="16"
      color="#075985"
    />

    <agent
      id="btn_continuas"
      x="400"
      y="650"
      text="🎪 Ver Animações Contínuas"
      font-size="18"
      color="#ffffff"
      width="300"
      height="50"
      color="#0369a1"
      animation="hover-grow"
      on_click="goToPage('continuas')"
    />
  </page>

  <!-- PÁGINA 2: ANIMAÇÕES CONTÍNUAS -->
  <page id="continuas" color="#f0fdf4" bg_music="osts-retro-forest.mp3">
    <agent
      id="titulo2"
      x="400"
      y="60"
      text="🌟 Animações Contínuas Encantadas"
      font-size="28"
      color="#166534"
      animation="fade-in"
    />

    <!-- Pulse - Coração mágico -->
    <agent
      id="coracao"
      x="150"
      y="180"
      text="💖"
      font-size="48"
      animation="pulse"
    />
    <agent
      id="label_pulse"
      x="150"
      y="230"
      text="Pulse"
      font-size="14"
      color="#166534"
    />

    <!-- Glow - Estrela brilhante (corrigido para box-shadow) -->
    <agent
      id="estrela"
      x="300"
      y="180"
      text="⭐"
      font-size="48"
      animation="glow"
    />
    <agent
      id="label_glow"
      x="300"
      y="230"
      text="Glow (Box-Shadow)"
      font-size="14"
      color="#166534"
    />

    <!-- Float - Fantasma flutuando -->
    <agent
      id="fantasma"
      x="450"
      y="180"
      text="👻"
      font-size="48"
      animation="float"
    />
    <agent
      id="label_float"
      x="450"
      y="230"
      text="Float"
      font-size="14"
      color="#166534"
    />

    <!-- Spin - Engrenagem girando -->
    <agent
      id="engrenagem"
      x="600"
      y="180"
      text="⚙️"
      font-size="48"
      animation="spin"
    />
    <agent
      id="label_spin"
      x="600"
      y="230"
      text="Spin"
      font-size="14"
      color="#166534"
    />

    <!-- Wiggle - Folha balançando -->
    <agent
      id="folha"
      x="750"
      y="180"
      text="🍃"
      font-size="48"
      animation="wiggle"
    />
    <agent
      id="label_wiggle"
      x="750"
      y="230"
      text="Wiggle"
      font-size="14"
      color="#166534"
    />

    <!-- Heartbeat - Coração batendo -->
    <agent
      id="coracao2"
      x="400"
      y="320"
      text="❤️"
      font-size="60"
      animation="heartbeat"
    />
    <agent
      id="label_heartbeat"
      x="400"
      y="380"
      text="Heartbeat"
      font-size="14"
      color="#166534"
    />

    <agent
      id="explicacao"
      x="400"
      y="450"
      text="🔄 Estas animações rodam infinitamente com transições suaves!"
      font-size="16"
      color="#365314"
    />

    <agent
      id="btn_hover"
      x="200"
      y="550"
      text="🖱️ Testar Hover"
      font-size="18"
      color="#ffffff"
      width="200"
      height="50"
      color="#16a34a"
      animation="hover-bounce"
      on_click="goToPage('hover')"
    />

    <agent
      id="btn_voltar1"
      x="600"
      y="550"
      text="⬅️ Voltar"
      font-size="18"
      color="#ffffff"
      width="150"
      height="50"
      bg_color="#6b7280"
      animation="hover-grow"
      on_click="goToPage('entrada')"
    />
  </page>

  <!-- PÁGINA 3: ANIMAÇÕES DE HOVER -->
  <page id="hover" bg_color="#fef3c7" bg_music="osts-stage.mp3">
    <agent
      id="titulo3"
      x="400"
      y="60"
      text="🖱️ Animações de Hover Interativas"
      font-size="28"
      color="#92400e"
      animation="fade-in"
    />

    <agent
      id="instrucao3"
      x="400"
      y="120"
      text="Passe o mouse sobre os elementos abaixo:"
      font-size="18"
      color="#a16207"
    />

    <!-- Hover Grow - Botão que cresce -->
    <agent
      id="btn_grow"
      x="200"
      y="200"
      text="🟦 Hover Grow"
      font-size="16"
      color="#ffffff"
      width="180"
      height="60"
      bg_color="#3b82f6"
      animation="hover-grow"
    />

    <!-- Hover Bounce - Elemento que salta -->
    <agent
      id="elemento_bounce"
      x="600"
      y="200"
      text="🦘 Hover Bounce"
      font-size="16"
      color="#ffffff"
      width="180"
      height="60"
      bg_color="#10b981"
      animation="hover-bounce"
    />

    <!-- Hover Tilt - Elemento que inclina -->
    <agent
      id="carta"
      x="200"
      y="320"
      image="desert-cactus.png"
      width="120"
      height="120"
      animation="hover-tilt"
    />
    <agent
      id="label_tilt"
      x="200"
      y="450"
      text="Hover Tilt"
      font-size="14"
      color="#92400e"
    />

    <!-- Hover Glow - Elemento que brilha (corrigido para box-shadow) -->
    <agent
      id="gema"
      x="600"
      y="320"
      text="💎"
      font-size="80"
      animation="hover-glow"
    />
    <agent
      id="label_glow_hover"
      x="600"
      y="450"
      text="Hover Glow (Box-Shadow)"
      font-size="14"
      color="#92400e"
    />

    <agent
      id="dica_hover"
      x="400"
      y="520"
      text="✨ Todas as animações de hover usam propriedades otimizadas!"
      font-size="16"
      color="#a16207"
    />

    <agent
      id="btn_clique"
      x="200"
      y="580"
      text="👆 Testar Clique"
      font-size="18"
      color="#ffffff"
      width="200"
      height="50"
      bg_color="#f59e0b"
      animation="hover-grow"
      on_click="goToPage('clique')"
    />

    <agent
      id="btn_voltar2"
      x="600"
      y="580"
      text="⬅️ Voltar"
      font-size="18"
      color="#ffffff"
      width="150"
      height="50"
      bg_color="#6b7280"
      animation="hover-grow"
      on_click="goToPage('continuas')"
    />
  </page>

  <!-- PÁGINA 4: ANIMAÇÕES DE CLIQUE -->
  <page id="clique" bg_color="#fce7f3" bg_music="osts-fear.mp3">
    <agent
      id="titulo4"
      x="400"
      y="60"
      text="👆 Animações de Clique Responsivas"
      font-size="28"
      color="#be185d"
      animation="fade-in"
    />

    <agent
      id="contador"
      x="400"
      y="120"
      text="Cliques totais: $contador_cliques"
      font-size="18"
      color="#c2185b"
    />

    <!-- Click Scale - Botão que diminui -->
    <agent
      id="btn_scale"
      x="200"
      y="200"
      text="🔻 Click Scale"
      font-size="16"
      color="#ffffff"
      width="180"
      height="60"
      bg_color="#e11d48"
      animation="click-scale"
      on_click="set(contador_cliques, $contador_cliques + 1)"
    />

    <!-- Click Bounce - Botão que quica -->
    <agent
      id="btn_bounce_click"
      x="600"
      y="200"
      text="🎾 Click Bounce"
      font-size="16"
      color="#ffffff"
      width="180"
      height="60"
      bg_color="#ec4899"
      animation="click-bounce"
      on_click="set(contador_cliques, $contador_cliques + 1)"
    />

    <!-- Click Shake - Elemento que balança -->
    <agent
      id="sino"
      x="400"
      y="320"
      text="🔔"
      font-size="80"
      animation="click-shake"
      on_click="set(contador_cliques, $contador_cliques + 1)"
    />
    <agent
      id="label_shake"
      x="400"
      y="400"
      text="Click Shake"
      font-size="14"
      color="#be185d"
    />

    <agent
      id="explicacao_clique"
      x="400"
      y="480"
      text="👆 Clique nos elementos para ver as animações de feedback!"
      font-size="16"
      color="#c2185b"
    />

    <agent
      id="btn_especiais"
      x="200"
      y="580"
      text="✨ Ver Especiais"
      font-size="18"
      color="#ffffff"
      width="200"
      height="50"
      bg_color="#be185d"
      animation="hover-grow"
      on_click="goToPage('especiais')"
    />

    <agent
      id="btn_voltar3"
      x="600"
      y="580"
      text="⬅️ Voltar"
      font-size="18"
      color="#ffffff"
      width="150"
      height="50"
      bg_color="#6b7280"
      animation="hover-grow"
      on_click="goToPage('hover')"
    />
  </page>

  <!-- PÁGINA 5: ANIMAÇÕES ESPECIAIS -->
  <page id="especiais" bg_color="#f3e8ff" bg_music="osts-retro-forest.mp3">
    <agent
      id="titulo5"
      x="400"
      y="60"
      text="✨ Animações Especiais Avançadas"
      font-size="28"
      color="#7c3aed"
      animation="fade-in"
    />

    <!-- Typewriter - Texto digitando (corrigido para opacity) -->
    <agent
      id="texto_typewriter"
      x="400"
      y="160"
      text="📝 Este texto aparece como máquina de escrever..."
      font-size="18"
      color="#6d28d9"
      animation="typewriter"
    />

    <!-- Slide Reveal - Elemento revelando (corrigido para transform) -->
    <agent
      id="elemento_reveal"
      x="200"
      y="240"
      text="🎭 Slide Reveal"
      font-size="16"
      color="#ffffff"
      width="200"
      height="60"
      color="#8b5cf6"
      animation="slide-reveal"
    />

    <!-- Morphing - Forma que muda -->
    <agent
      id="forma_morphing"
      x="600"
      y="240"
      text="🟪"
      font-size="60"
      animation="morphing"
    />
    <agent
      id="label_morphing"
      x="600"
      y="320"
      text="Morphing"
      font-size="14"
      color="#7c3aed"
    />

    <!-- Glitch - Efeito de falha (corrigido sem filter) -->
    <agent
      id="elemento_glitch"
      x="400"
      y="380"
      text="👾 GLITCH EFFECT"
      font-size="20"
      color="#dc2626"
      animation="glitch"
    />

    <agent
      id="explicacao_especiais"
      x="400"
      y="480"
      text="🔬 Animações especiais usam técnicas avançadas otimizadas!"
      font-size="16"
      color="#7c3aed"
    />

    <agent
      id="resultado_titulo"
      x="400"
      y="530"
      text="🎉 TODAS AS ANIMAÇÕES TESTADAS COM SUCESSO!"
      font-size="20"
      color="#059669"
      animation="bounce-in"
    />

    <agent
      id="btn_reiniciar"
      x="200"
      y="600"
      text="🔄 Reiniciar Tour"
      font-size="18"
      color="#ffffff"
      width="200"
      height="50"
      color="#7c3aed"
      animation="hover-bounce"
      on_click="set(contador_cliques, 0); goToPage('entrada')"
    />

    <agent
      id="btn_voltar4"
      x="600"
      y="600"
      text="⬅️ Voltar"
      font-size="18"
      color="#ffffff"
      width="150"
      height="50"
      color="#6b7280"
      animation="hover-grow"
      on_click="goToPage('clique')"
    />
  </page>
</fable>
