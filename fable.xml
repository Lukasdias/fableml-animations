<fable>
  <!-- Configura칞칫es globais -->
  <config font-family="Roboto" />
  
  <!-- Vari치veis do invent치rio -->
  <property name="inventario" default="[]" />
  <property name="dinheiro" default="50" />
  <property name="mensagem" default="Arraste itens para o invent치rio!" />

  <page id="aventura" bg_color="#4a5568" bg_music="osts-retro-forest.mp3">
    <!-- Interface do jogo -->
    <agent id="titulo" x="300" y="30" 
           text="游낅 Loja de Aventureiros" 
           color="#ffffff" font-size="24" />
    
    <agent id="dinheiro-display" x="50" y="80" 
           text="游눯 Dinheiro: $dinheiro moedas" 
           color="#ffff00" font-size="16" />
    
    <agent id="mensagem-display" x="50" y="110" 
           text="$mensagem" 
           color="#ffffff" font-size="14" />
    
    <!-- Itens dispon칤veis para compra/coleta -->
    <agent id="sword" x="100" y="200" image="tech-acid-1.png" 
           width="50" height="50" draggable="true" 
           on_drag="set(mensagem, 'Arrastando Espada (10 moedas)')" />
    
    <agent id="sword-label" x="100" y="260" text="Espada - 10 游눯" 
           color="#ffffff" font-size="12" />
    
    <agent id="shield" x="200" y="200" image="tech-saw.png" 
           width="50" height="50" draggable="true"
           on_drag="set(mensagem, 'Arrastando Escudo (15 moedas)')" />
    
    <agent id="shield-label" x="200" y="260" text="Escudo - 15 游눯" 
           color="#ffffff" font-size="12" />
    
    <agent id="potion" x="300" y="200" image="forest-mushroom.png" 
           width="50" height="50" draggable="true"
           on_drag="set(mensagem, 'Arrastando Po칞칚o (5 moedas)')" />
    
    <agent id="potion-label" x="300" y="260" text="Po칞칚o - 5 游눯" 
           color="#ffffff" font-size="12" />
    
    <!-- 츼rea do invent치rio -->
    <agent id="inventario-bg" x="450" y="150" width="300" height="200"
           text="游닍 INVENT츼RIO (Solte itens aqui)" 
           color="#cccccc" font-size="16"
           drop_accept="sword,shield,potion"
           on_drop="set(mensagem, 'Item adicionado ao invent치rio!')" />
    
    <!-- Mostra itens no invent치rio -->
    <fab-for each="item in $inventario" index="i">
      <agent id="inv-item-$i" x="$i * 60 + 460" y="180" 
             image="$item" width="40" height="40" />
    </fab-for>
    
    <!-- Sistema de dinheiro -->
    <fab-if when="$dinheiro <= 0">
      <agent id="sem-dinheiro" x="300" y="350" 
             text="游눶 Sem dinheiro! Venda alguns itens!" 
             color="#ff0000" font-size="16" animation="pulse" />
    </fab-if>
    
    <!-- Bot칚o de reset -->
    <agent id="reset-loja" x="50" y="450" text="游댃 Resetar Loja" 
           color="#ffffff" animation="hover-grow"
           on_click="set(inventario, []); set(dinheiro, 50); set(mensagem, 'Loja resetada!')" />
  </page>
</fable>