<fable>
  <config font-family="Arial" />

  <property name="item_correto" default="false" />
  <property name="pontuacao" default="0" />
  <property name="tentativas" default="0" />

  <page id="drag_basico" bg_color="#ecf0f1">
    <agent
      id="titulo"
      x="300"
      y="30"
      text="Arraste e Solte - Basico"
      color="#2c3e50"
      font-size="20"
    />

    <agent
      id="instrucoes"
      x="300"
      y="70"
      text="Arraste os itens para as zonas corretas"
      color="#7f8c8d"
      font-size="14"
    />

    <agent
      id="score"
      x="100"
      y="100"
      text="Pontos: $pontuacao | Tentativas: $tentativas"
      color="#27ae60"
      font-size="12"
    />

    <agent
      id="fruta"
      x="100"
      y="200"
      width="60"
      height="60"
      text="Maca"
      font-size="14"
      draggable="true"
      drag_value="fruta"
      animation="hover-grow"
    />

    <agent
      id="animal"
      x="200"
      y="200"
      width="60"
      height="60"
      text="Cao"
      font-size="14"
      draggable="true"
      drag_value="animal"
      animation="hover-grow"
    />

    <agent
      id="veiculo"
      x="300"
      y="200"
      width="60"
      height="60"
      text="Carro"
      font-size="14"
      draggable="true"
      drag_value="veiculo"
      animation="hover-grow"
    />

    <agent
      id="zona_comida"
      x="400"
      y="150"
      width="120"
      height="80"
      text="Zona Comida"
      color="#e67e22"
      drag-item="fruta"
      on_drop="set(tentativas, $tentativas + 1);
                    setIf(drag_value = 'fruta', pontuacao, $pontuacao + 10);
                    setIf(drag_value = 'fruta', item_correto, true)"
    />

    <agent
      id="zona_pets"
      x="400"
      y="250"
      width="120"
      height="80"
      text="Zona Pets"
      color="#3498db"
      drag-item="animal"
      on_drop="set(tentativas, $tentativas + 1);
                    setIf(drag_value = 'animal', pontuacao, $pontuacao + 10)"
    />

    <agent
      id="zona_transporte"
      x="400"
      y="350"
      width="120"
      height="80"
      text="Zona Transporte"
      color="#9b59b6"
      drag-item="veiculo"
      on_drop="set(tentativas, $tentativas + 1);
                    setIf(drag_value = 'veiculo', pontuacao, $pontuacao + 10)"
    />

    <fab-if when="$item_correto = true">
      <agent
        id="sucesso"
        x="300"
        y="450"
        text="Muito bem! Continue..."
        color="#27ae60"
        font-size="16"
        animation="bounce-in"
      />
    </fab-if>

    <fab-if when="$tentativas >= 5">
      <agent
        id="reset"
        x="300"
        y="500"
        text="Reiniciar"
        color="#e74c3c"
        animation="hover-grow"
        on_click="set(pontuacao, 0); set(tentativas, 0); set(item_correto, false)"
      />
    </fab-if>
  </page>
</fable>
