<fable>
  <config font-family="Poppins" />
  <property name="pontuacao" default="0" />

  <!-- 🎬 PÁGINA 1: ANIMAÇÕES DE ENTRADA -->
  <page id="entrada" bg_color="#e3f2fd">
    <agent
      id="titulo"
      x="350"
      y="30"
      text="🎬 Animações de Entrada"
      font-size="24"
      color="#1976d2"
    />
    <agent
      id="desc"
      x="350"
      y="70"
      text="Navegue entre as páginas para ver as animações!"
      font-size="16"
      color="#424242"
    />

    <!-- Linha 1: Fades -->
    <agent
      id="fade"
      x="50"
      y="120"
      text="fade-in"
      animation="fade-in"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="fade-up"
      x="150"
      y="120"
      text="fade-in-up"
      animation="fade-in-up"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="fade-down"
      x="250"
      y="120"
      text="fade-in-down"
      animation="fade-in-down"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="fade-left"
      x="350"
      y="120"
      text="fade-in-left"
      animation="fade-in-left"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="fade-right"
      x="450"
      y="120"
      text="fade-in-right"
      animation="fade-in-right"
      color="#fff"
      width="90"
      height="40"
    />

    <!-- Linha 2: Slides -->
    <agent
      id="slide-up"
      x="50"
      y="170"
      text="slide-up"
      animation="slide-up"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="slide-down"
      x="150"
      y="170"
      text="slide-down"
      animation="slide-down"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="slide-left"
      x="250"
      y="170"
      text="slide-left"
      animation="slide-left"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="slide-right"
      x="350"
      y="170"
      text="slide-right"
      animation="slide-right"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="slide-reveal"
      x="450"
      y="170"
      text="slide-reveal"
      animation="slide-reveal"
      color="#fff"
      width="90"
      height="40"
    />

    <!-- Linha 3: Zoom e Bounces -->
    <agent
      id="zoom"
      x="50"
      y="220"
      text="zoom-in"
      animation="zoom-in"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="bounce"
      x="150"
      y="220"
      text="bounce-in"
      animation="bounce-in"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="scale"
      x="250"
      y="220"
      text="scale-in"
      animation="scale-in"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="rotate"
      x="350"
      y="220"
      text="rotate-in"
      animation="rotate-in"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="swing"
      x="450"
      y="220"
      text="swing-in"
      animation="swing-in"
      color="#fff"
      width="90"
      height="40"
    />

    <!-- Linha 4: Especiais -->
    <agent
      id="flip"
      x="250"
      y="270"
      text="flip-in"
      animation="flip-in"
      color="#fff"
      width="90"
      height="40"
    />

    <agent
      id="proximo1"
      x="350"
      y="350"
      text="➡️ Contínuas"
      on_click="goToPage('continuas')"
      color="#fff"
      width="120"
      height="40"
      animation="hover-grow"
    />
  </page>

  <!-- 🔄 PÁGINA 2: ANIMAÇÕES CONTÍNUAS -->
  <page id="continuas" bg_color="#f3e5f5">
    <agent
      id="titulo2"
      x="350"
      y="30"
      text="🔄 Animações Contínuas"
      font-size="24"
      color="#7b1fa2"
    />
    <agent
      id="desc2"
      x="350"
      y="70"
      text="Estas animações ficam rodando infinitamente!"
      font-size="16"
      color="#424242"
    />

    <!-- Linha 1: Básicas -->
    <agent
      id="pulse"
      x="50"
      y="120"
      text="pulse"
      animation="pulse"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="glow"
      x="140"
      y="120"
      text="glow"
      animation="glow"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="float"
      x="230"
      y="120"
      text="float"
      animation="float"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="spin"
      x="320"
      y="120"
      text="spin"
      animation="spin"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="wiggle"
      x="410"
      y="120"
      text="wiggle"
      animation="wiggle"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="heartbeat"
      x="500"
      y="120"
      text="heartbeat"
      animation="heartbeat"
      color="#fff"
      width="80"
      height="40"
    />

    <!-- Linha 2: Novas -->
    <agent
      id="breathing"
      x="50"
      y="170"
      text="breathing"
      animation="breathing"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="swing-cont"
      x="140"
      y="170"
      text="swing"
      animation="swing"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="wobble-cont"
      x="230"
      y="170"
      text="wobble"
      animation="wobble"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="rubber"
      x="320"
      y="170"
      text="rubber-band"
      animation="rubber-band"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="jello"
      x="410"
      y="170"
      text="jello"
      animation="jello"
      color="#fff"
      width="80"
      height="40"
    />

    <!-- Linha 3: Especiais -->
    <agent
      id="bounce-loop"
      x="140"
      y="220"
      text="bounce-loop"
      animation="bounce-loop"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="fade-pulse"
      x="230"
      y="220"
      text="fade-pulse"
      animation="fade-pulse"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="zoom-pulse"
      x="320"
      y="220"
      text="zoom-pulse"
      animation="zoom-pulse"
      color="#fff"
      width="80"
      height="40"
    />
    <agent
      id="morphing"
      x="410"
      y="220"
      text="morphing"
      animation="morphing"
      color="#fff"
      width="80"
      height="40"
    />

    <agent
      id="anterior1"
      x="200"
      y="350"
      text="⬅️ Entrada"
      on_click="goToPage('entrada')"
      color="#fff"
      width="100"
      height="40"
      animation="hover-grow"
    />
    <agent
      id="proximo2"
      x="400"
      y="350"
      text="➡️ Hover"
      on_click="goToPage('hover')"
      color="#fff"
      width="100"
      height="40"
      animation="hover-grow"
    />
  </page>

  <!-- 👆 PÁGINA 3: ANIMAÇÕES DE HOVER -->
  <page id="hover" bg_color="#e8f5e8">
    <agent
      id="titulo3"
      x="350"
      y="30"
      text="👆 Animações de Hover"
      font-size="24"
      color="#2e7d32"
    />
    <agent
      id="desc3"
      x="350"
      y="70"
      text="Passe o mouse sobre os elementos!"
      font-size="16"
      color="#424242"
    />

    <!-- Linha 1: Básicas -->
    <agent
      id="hover-grow"
      x="50"
      y="120"
      text="hover-grow"
      animation="hover-grow"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="hover-bounce"
      x="150"
      y="120"
      text="hover-bounce"
      animation="hover-bounce"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="hover-tilt"
      x="250"
      y="120"
      text="hover-tilt"
      animation="hover-tilt"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="hover-glow"
      x="350"
      y="120"
      text="hover-glow"
      animation="hover-glow"
      color="#fff"
      width="90"
      height="40"
    />

    <!-- Linha 2: Escalas -->
    <agent
      id="hover-scale-up"
      x="50"
      y="170"
      text="hover-scale-up"
      animation="hover-scale-up"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="hover-scale-down"
      x="150"
      y="170"
      text="hover-scale-down"
      animation="hover-scale-down"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="hover-float"
      x="250"
      y="170"
      text="hover-float"
      animation="hover-float"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="hover-shadow"
      x="350"
      y="170"
      text="hover-shadow"
      animation="hover-shadow"
      color="#fff"
      width="90"
      height="40"
    />

    <!-- Linha 3: Rotações -->
    <agent
      id="hover-rotate-left"
      x="100"
      y="220"
      text="hover-rotate-left"
      animation="hover-rotate-left"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="hover-rotate-right"
      x="200"
      y="220"
      text="hover-rotate-right"
      animation="hover-rotate-right"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="hover-pulse"
      x="300"
      y="220"
      text="hover-pulse"
      animation="hover-pulse"
      color="#fff"
      width="90"
      height="40"
    />

    <agent
      id="anterior2"
      x="200"
      y="350"
      text="⬅️ Contínuas"
      on_click="goToPage('continuas')"
      color="#fff"
      width="100"
      height="40"
      animation="hover-grow"
    />
    <agent
      id="proximo3"
      x="400"
      y="350"
      text="➡️ Clique"
      on_click="goToPage('clique')"
      color="#fff"
      width="100"
      height="40"
      animation="hover-grow"
    />
  </page>

  <!-- 👆 PÁGINA 4: ANIMAÇÕES DE CLIQUE -->
  <page id="clique" bg_color="#fff3e0">
    <agent
      id="titulo4"
      x="350"
      y="30"
      text="👆 Animações de Clique"
      font-size="24"
      color="#f57c00"
    />
    <agent
      id="desc4"
      x="350"
      y="70"
      text="Clique nos elementos para ver as animações!"
      font-size="16"
      color="#424242"
    />
    <agent
      id="pontos"
      x="350"
      y="100"
      text="Pontos: $pontuacao"
      font-size="18"
      color="#e65100"
    />

    <!-- Linha 1: Básicas -->
    <agent
      id="click-scale"
      x="50"
      y="140"
      text="click-scale"
      animation="click-scale"
      on_click="set(pontuacao, $pontuacao + 1)"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="click-bounce"
      x="150"
      y="140"
      text="click-bounce"
      animation="click-bounce"
      on_click="set(pontuacao, $pontuacao + 1)"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="click-shake"
      x="250"
      y="140"
      text="click-shake"
      animation="click-shake"
      on_click="set(pontuacao, $pontuacao + 1)"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="click-shrink"
      x="350"
      y="140"
      text="click-shrink"
      animation="click-shrink"
      on_click="set(pontuacao, $pontuacao + 1)"
      color="#fff"
      width="90"
      height="40"
    />

    <!-- Linha 2: Avançadas -->
    <agent
      id="click-rotate"
      x="50"
      y="190"
      text="click-rotate"
      animation="click-rotate"
      on_click="set(pontuacao, $pontuacao + 1)"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="click-pulse"
      x="150"
      y="190"
      text="click-pulse"
      animation="click-pulse"
      on_click="set(pontuacao, $pontuacao + 1)"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="click-jiggle"
      x="250"
      y="190"
      text="click-jiggle"
      animation="click-jiggle"
      on_click="set(pontuacao, $pontuacao + 1)"
      color="#fff"
      width="90"
      height="40"
    />
    <agent
      id="click-squish"
      x="350"
      y="190"
      text="click-squish"
      animation="click-squish"
      on_click="set(pontuacao, $pontuacao + 1)"
      color="#fff"
      width="90"
      height="40"
    />

    <agent
      id="reset"
      x="200"
      y="250"
      text="🔄 Reset Pontos"
      on_click="set(pontuacao, 0)"
      color="#fff"
      width="120"
      height="40"
      animation="hover-glow"
    />

    <agent
      id="anterior3"
      x="200"
      y="320"
      text="⬅️ Hover"
      on_click="goToPage('hover')"
      color="#fff"
      width="100"
      height="40"
      animation="hover-grow"
    />
    <agent
      id="proximo4"
      x="400"
      y="320"
      text="➡️ Especiais"
      on_click="goToPage('especiais')"
      color="#fff"
      width="100"
      height="40"
      animation="hover-grow"
    />
  </page>

  <!-- ✨ PÁGINA 5: ANIMAÇÕES ESPECIAIS -->
  <page id="especiais" bg_color="#fce4ec">
    <agent
      id="titulo5"
      x="350"
      y="30"
      text="✨ Animações Especiais"
      font-size="24"
      color="#c2185b"
    />
    <agent
      id="desc5"
      x="350"
      y="70"
      text="Demonstrações de efeitos únicos!"
      font-size="16"
      color="#424242"
    />

    <!-- Linha 1: Especiais -->
    <agent
      id="typewriter"
      x="100"
      y="120"
      text="Efeito typewriter..."
      animation="typewriter"
      color="#fff"
      width="150"
      height="40"
    />
    <agent
      id="glitch"
      x="300"
      y="120"
      text="glitch"
      animation="glitch"
      color="#fff"
      width="100"
      height="40"
    />

    <!-- Combinações -->
    <agent
      id="combo1"
      x="100"
      y="180"
      text="Fade + Hover"
      animation="fade-in hover-glow"
      color="#fff"
      width="120"
      height="40"
    />
    <agent
      id="combo2"
      x="250"
      y="180"
      text="Bounce + Click"
      animation="bounce-in click-pulse"
      on_click="set(pontuacao, $pontuacao + 5)"
      color="#fff"
      width="120"
      height="40"
    />
    <agent
      id="combo3"
      x="400"
      y="180"
      text="Spin + Hover"
      animation="spin hover-scale-up"
      color="#fff"
      width="120"
      height="40"
    />

    <!-- Elementos com imagens (se disponível) -->
    <agent
      id="img-animado"
      x="200"
      y="240"
      image="forest-hero-idle.png"
      animation="bounce-loop hover-glow"
      width="80"
      height="80"
    />

    <agent
      id="voltar"
      x="300"
      y="350"
      text="🏠 Voltar ao Início"
      on_click="goToPage('entrada')"
      color="#fff"
      width="150"
      height="40"
      animation="hover-grow"
    />
  </page>
</fable>
