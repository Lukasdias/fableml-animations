           on_drop="set(dinheiro, $dinheiro + $drop_value); set(mensagem, 'Vendeu $dropped_item por $drop_value moedas!')" />
    
    <!-- Hospital - Cura vida -->
    <agent id="hospital" x="300" y="350" width="120" height="80"
