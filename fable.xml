<fable>
  <config font-family="Roboto Mono" />
  
  <!-- VariÃ¡veis para todos os tipos de teste -->
  <property name="contador_set" default="0" />
  <property name="contador_setif" default="0" />
  <property name="booleano_teste" default="false" />
  <property name="string_teste" default="inicial" />
  <property name="numero_decimal" default="0.5" />
  <property name="array_size" default="0" />
  <property name="drag_contador" default="0" />
  <property name="navegacao_contador" default="0" />

  <!-- PÃ¡gina de testes completos -->
  <page id="validacao_completa" bg_color="#1e1e2e">
    <agent id="titulo_validacao" x="300" y="20" text="ð§ª ValidaÃ§Ã£o Completa FableML" 
           color="#ffffff" font-size="18" />

    <!-- SeÃ§Ã£o 1: Testes set() -->
    <agent id="secao_set" x="50" y="60" text="ð Testes set()" 
           color="#3498db" font-size="16" />
    
    <agent id="contador_display" x="50" y="80" 
           text="Contador: $contador_set" 
           color="#ffffff" font-size="12" />
    
    <agent id="incrementar" x="50" y="100" text="+ 1" 
           color="#27ae60" animation="hover-grow"
           on_click="set(contador_set, $contador_set + 1)" />
    
    <agent id="decrementar" x="100" y="100" text="- 1" 
           color="#e74c3c" animation="hover-grow"
           on_click="set(contador_set, $contador_set - 1)" />
    
    <agent id="reset_contador" x="150" y="100" text="Reset" 
           color="#95a5a6" animation="hover-grow"
           on_click="set(contador_set, 0)" />
    
    <agent id="multiplicar" x="200" y="100" text="Ã 2" 
           color="#9b59b6" animation="hover-grow"
           on_click="set(contador_set, $contador_set * 2)" />

    <!-- SeÃ§Ã£o 2: Testes setIf() -->
    <agent id="secao_setif" x="50" y="140" text="ð Testes setIf()" 
           color="#f39c12" font-size="16" />
    
    <agent id="setif_display" x="50" y="160" 
           text="Contador setIf: $contador_setif | Booleano: $booleano_teste" 
           color="#ffffff" font-size="12" />
    
    <!-- Teste condiÃ§Ãµes numÃ©ricas -->
    <agent id="setif_maior" x="50" y="180" text="Se > 5 entÃ£o +10" 
           color="#27ae60" animation="hover-grow"
           on_click="setIf($contador_set > 5, contador_setif, $contador_setif + 10)" />
    
    <agent id="setif_menor" x="200" y="180" text="Se < 0 entÃ£o reset" 
           color="#e74c3c" animation="hover-grow"
           on_click="setIf($contador_set < 0, contador_setif, 0)" />
    
    <!-- Teste condiÃ§Ãµes booleanas -->
    <agent id="toggle_bool" x="350" y="180" text="Toggle Bool" 
           color="#9b59b6" animation="hover-grow"
           on_click="setIf($booleano_teste = false, booleano_teste, true);
                     setIf($booleano_teste = true, booleano_teste, false)" />
    
    <!-- Teste AND/OR -->
    <agent id="setif_and" x="50" y="200" text="Se >0 AND bool=true" 
           color="#3498db" animation="hover-grow"
           on_click="setIf($contador_set > 0 and $booleano_teste = true, string_teste, 'ambos_true')" />
    
    <agent id="setif_or" x="200" y="200" text="Se <-5 OR >10" 
           color="#8e44ad" animation="hover-grow"
           on_click="setIf($contador_set < -5 or $contador_set > 10, string_teste, 'extremo')" />

    <!-- SeÃ§Ã£o 3: Drag and Drop AvanÃ§ado -->
    <agent id="secao_drag" x="50" y="240" text="ð¯ Drag & Drop Completo" 
           color="#e67e22" font-size="16" />
    
    <agent id="drag_stats" x="50" y="260" 
           text="Drags corretos: $drag_contador" 
           color="#ffffff" font-size="12" />

    <!-- MÃºltiplos itens drag -->
    <agent id="item_a" x="50" y="280" width="40" height="30" 
           text="A" color="#ffffff" draggable="true" 
           drag_value="tipo_a" animation="hover-grow" />
    
    <agent id="item_b" x="100" y="280" width="40" height="30" 
           text="B" color="#ffffff" draggable="true" 
           drag_value="tipo_b" animation="hover-grow" />
    
    <agent id="item_c" x="150" y="280" width="40" height="30" 
           text="C" color="#ffffff" draggable="true" 
           drag_value="tipo_c" animation="hover-grow" />

    <!-- Zonas especÃ­ficas com validaÃ§Ãµes complexas -->
    <agent id="zona_a" x="250" y="280" width="80" height="30" 
           text="Zona A" color="#27ae60" drag-item="tipo_a"
           on_drop="setIf(drag_value = 'tipo_a', drag_contador, $drag_contador + 1);
                    setIf(drag_value = 'tipo_a', string_teste, 'correto_a')" />
    
    <agent id="zona_multiple" x="350" y="280" width="80" height="30" 
           text="Multi Zone" color="#3498db" drag-item="tipo_b,tipo_c"
           on_drop="setIf(drag_value = 'tipo_b' or drag_value = 'tipo_c', drag_contador, $drag_contador + 2)" />

    <!-- SeÃ§Ã£o 4: NavegaÃ§Ã£o complexa -->
    <agent id="secao_nav" x="50" y="320" text="ð NavegaÃ§Ã£o AvanÃ§ada" 
           color="#1abc9c" font-size="16" />
    
    <agent id="nav_condicional" x="50" y="340" text="Ir se contador > 5" 
           color="#34495e" animation="hover-grow"
           on_click="setIf($contador_set > 5, navegacao_contador, $navegacao_contador + 1);
                     setIf($contador_set > 5, goToPage, pagina_secreta)" />
    
    <agent id="nav_drag" x="200" y="340" text="Ir se 3+ drags" 
           color="#34495e" animation="hover-grow"
           on_click="setIf($drag_contador >= 3, goToPage, pagina_drag_master)" />

    <!-- Status display -->
    <agent id="status_geral" x="300" y="380" 
           text="String: $string_teste | Decimal: $numero_decimal" 
           color="#ffd700" font-size="10" />

    <!-- Testes edge cases -->
    <agent id="edge_case_1" x="50" y="400" text="Teste 0 = false" 
           color="#7f8c8d" animation="hover-grow"
           on_click="setIf($contador_set = 0, string_teste, 'zero_eh_false')" />
    
    <agent id="edge_case_2" x="150" y="400" text="String vazia" 
           color="#7f8c8d" animation="hover-grow"
           on_click="set(string_teste, '')" />
    
    <agent id="edge_case_3" x="250" y="400" text="NÃºmero negativo" 
           color="#7f8c8d" animation="hover-grow"
           on_click="set(numero_decimal, -1.5)" />

    <!-- Loop test -->
    <agent id="loop_test" x="350" y="400" text="Loop 10x" 
           color="#e74c3c" animation="hover-grow"
           on_click="setIf($contador_set < 10, contador_set, $contador_set + 1)" />
  </page>

  <!-- PÃ¡gina secreta (navegaÃ§Ã£o condicional) -->
  <page id="pagina_secreta" bg_color="#8e44ad">
    <agent id="titulo_secreta" x="300" y="100" text="ð PÃ¡gina Secreta Desbloqueada!" 
           color="#ffffff" font-size="20" />
    
    <agent id="info_acesso" x="300" y="150" 
           text="VocÃª acessou esta pÃ¡gina porque contador > 5" 
           color="#ecf0f1" font-size="14" />
    
    <agent id="voltar_teste" x="300" y="300" text="â¬ï¸ Voltar aos Testes" 
           color="#3498db" animation="hover-grow"
           on_click="goToPage(validacao_completa)" />
  </page>

  <!-- PÃ¡gina drag master -->
  <page id="pagina_drag_master" bg_color="#27ae60">
    <agent id="titulo_drag_master" x="300" y="100" text="ð Drag Master!" 
           color="#ffffff" font-size="20" />
    
    <agent id="info_drag" x="300" y="150" 
           text="VocÃª dominou o sistema de drag & drop!" 
           color="#ecf0f1" font-size="14" />
    
    <agent id="reset_tudo" x="300" y="250" text="ð Reset Completo" 
           color="#e74c3c" animation="hover-grow"
           on_click="set(contador_set, 0); set(contador_setif, 0); 
                     set(booleano_teste, false); set(string_teste, 'inicial');
                     set(drag_contador, 0); set(navegacao_contador, 0)" />
    
    <agent id="voltar_teste2" x="300" y="300" text="â¬ï¸ Voltar aos Testes" 
           color="#3498db" animation="hover-grow"
           on_click="goToPage(validacao_completa)" />
  </page>
</fable>