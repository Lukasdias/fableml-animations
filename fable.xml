<fable>
  <!-- Configurações globais -->
  <config font-family="Poppins" />

  <!-- Variáveis do sistema -->
  <property name="pontuacao" default="0" />
  <property name="nivel" default="1" />

  <page id="jogo" bg_color="#2a5d31">
    <!-- Display da pontuação -->
    <agent
      id="score"
      x="50"
      y="50"
      text="Pontos: $pontuacao | Nível: $nivel"
      color="#ffffff"
      font-size="18"
    />

    <!-- Botões que dão pontos -->
    <agent
      id="btn-easy"
      x="100"
      y="300"
      text="Fácil (+1)"
      color="#ffffff"
      animation="hover-grow"
      on_click="set(pontuacao, $pontuacao + 1)"
    />

    <agent
      id="btn-medium"
      x="250"
      y="300"
      text="Médio (+3)"
      color="#ffffff"
      animation="hover-grow"
      on_click="set(pontuacao, $pontuacao + 3)"
    />

    <agent
      id="btn-hard"
      x="400"
      y="300"
      text="Difícil (+5)"
      color="#ffffff"
      animation="hover-grow"
      on_click="set(pontuacao, $pontuacao + 5)"
    />

    <!-- Sistema de níveis automático -->
    <fab-if when="$pontuacao >= 10 and $nivel = 1">
      <agent
        id="level-up-1"
        x="300"
        y="150"
        text="NÍVEL 2 DESBLOQUEADO!"
        color="#ffff00"
        font-size="20"
        animation="bounce-in"
        on_click="set(nivel, 2)"
      />
    </fab-if>

    <fab-if when="$pontuacao >= 25 and $nivel = 2">
      <agent
        id="level-up-2"
        x="300"
        y="150"
        text="NÍVEL 3 DESBLOQUEADO!"
        color="#ff8800"
        font-size="20"
        animation="bounce-in"
        on_click="set(nivel, 3)"
      />
    </fab-if>

    <!-- Recompensa por atingir meta -->
    <fab-if when="$pontuacao >= 50">
      <agent
        id="parabens"
        x="300"
        y="400"
        text="🏆 PARABÉNS! VOCÊ VENCEU!"
        color="#ffd700"
        font-size="24"
        animation="bounce-in pulse"
      />

      <agent
        id="reset"
        x="300"
        y="450"
        text="Jogar Novamente"
        color="#ffffff"
        animation="hover-grow"
        on_click="set(pontuacao, 0); set(nivel, 1)"
      />
    </fab-if>
  </page>
</fable>
