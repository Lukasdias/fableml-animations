<page id="start2" bg_image="desert-bg.png" bg_music="osts-vilo.mp3">
  <agent
    id="teste"
    text="Hello World Start"
    color="white"
    x="center"
    y="center"
    font-size="70"
  />

  <agent
    id="new_agent"
    text="New Agent"
    x="center"
    y="50"
    color="red"
    font-size="30"
    on_click="set(pontuacao, $pontuacao + 2)"
  />

  <fab-if when="$pontuacao %2 = 0">
    <agent id="new_agent_2" text="New Agent" />
  </fab-if>

  <agent
    id="next_page_text"
    text="Proxima Pagina"
    animation="glitch"
    y="480"
    x="640"
    on_click="goToPage('ending')"
  />
</page>
