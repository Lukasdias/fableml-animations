    y="340"
    text="✨ EFEITOS ESPECIAIS"
    color="#0f172a"
    font-size="18"
  />

  <agent
    id="demo-glow-shadow"
    x="150"
    y="380"
    text="GLOW SHADOW"
    color="#1e293b"
    font-size="16"
