<page id="continuas" bg_color="#f1f5f9">
  <agent
    id="titulo-continuas"
    x="center"
    y="50"
    text="🔄 ANIMAÇÕES CONTÍNUAS"
    color="#1e293b"
    font-size="24"
  />

  <agent
    id="desc-continuas"
    x="center"
    y="90"
    text="Animações que se repetem infinitamente para criar movimento constante"
    color="#475569"
    font-size="14"
  />

  <!-- Linha 1: Básicas -->
  <agent
    id="label-basicas"
    x="center"
    y="140"
    text="🎯 ANIMAÇÕES BÁSICAS"
    color="#0f172a"
    font-size="18"
  />

  <agent
    id="demo-pulse"
    x="120"
    y="180"
    text="PULSE"
    color="#1e293b"
    font-size="16"
    animation="pulse"
    on_click="set(contador_cliques, $contador_cliques + 1); set(feedback, 'Pulse ativo!')"
  />

  <agent
    id="demo-glow"
    x="250"
    y="180"
    text="GLOW"
    color="#1e293b"
    font-size="16"
    animation="glow"
    on_click="set(contador_cliques, $contador_cliques + 1); set(feedback, 'Glow ativo!')"
  />

  <agent
    id="demo-float"
