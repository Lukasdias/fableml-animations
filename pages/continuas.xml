  <!-- Navegação -->
  <agent
    id="feedback-continuas"
    x="center"
    y="450"
    text="$feedback"
    color="#7c3aed"
    font-size="14"
  />

  <agent
    id="voltar-entrada"
    x="100"
    y="500"
    text="⬅️ ENTRADA"
    color="#ef4444"
    font-size="14"
    animation="hover-glow click-scale"
    on_click="goToPage('entrada')"
  />

  <agent
    id="proxima-hover"
    x="700"
    y="500"
    text="HOVER ➡️"
    color="#10b981"
    font-size="14"
    animation="hover-glow click-scale"
    on_click="goToPage('hover')"
  />
</page>
